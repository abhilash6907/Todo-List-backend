# Backend environment variables
# Copy this file to .env and fill values.

# Your MongoDB connection string
MONGODB_URI=

# Optional: database name to use inside the cluster
MONGODB_DB=todo

# Required: JWT signing secret (use a long random string)
JWT_SECRET=

# Optional: server port
PORT=5174

# Email configuration for verification
EMAIL_USER=
EMAIL_PASS=

# Frontend URL for CORS (comma-separated for multiple origins)
FRONTEND_URL=https://your-frontend.vercel.app,http://localhost:5173
